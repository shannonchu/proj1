<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>

<% if @trainer == current_trainer %>
<%= button_to "Create New Pokemon", new_path, :class => "button medium", :method => :get %>
<% end %>

<% @trainer.pokemon.each do |pokemon| %>
  <h4><%= pokemon.name %></h4> 
  <p>Level: <%= pokemon.level %>  </p>
  <p>Health: <%= pokemon.health %></p>
  <%= button_to "Damage!", damage_path(id: pokemon.id), :class => "button small", :method => :patch %>
<% end %>